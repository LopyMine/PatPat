{
	"schemaVersion": 1,
	"id": "${mod_id}",
	"version": "${mod_version}",
	"name": "${mod_name}",
	"description": "${mod_description}",
	"authors": [
		"${mod_authors}"
	],
	"contact": {
		"homepage": "https://modrinth.com/mod/${mod_id}",
		"sources": "https://github.com/LopyMine/${mod_id}",
		"issues": "https://github.com/LopyMine/${mod_id}/issues"
	},
	"license": "${mod_license}",
	"icon": "icon/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"net.lopymine.patpat.PatPat"
		],
		"client": [
			"net.lopymine.patpat.client.PatPatClient"
		],
		"server": [
			"net.lopymine.patpat.dedicated.PatPatDedicatedServer"
		],
		"modmenu": [
			"net.lopymine.patpat.modmenu.ModMenuIntegration"
		]
	},
	"depends": {
		"fabricloader": ">=${fabric_loader}",
		"minecraft": ">=${minecraft}",
		"java": ">=${java}",
		"${fabric_api_id}": "*"
	},
	"accessWidener": "aws/${minecraft}.accesswidener",
	"mixins": [
		"${mod_id}.mixins.json",
		"${mod_id}-geckolib.mixins.json"
	],
	"custom": {
		"translators": {
			"MrLemonHog": "Ukrainian"
		},
		"modmenu": {
			"links": {
				"modmenu.discord": "https://discord.gg/NZzxdkrV4s",
				"modmenu.curseforge": "https://www.curseforge.com/minecraft/mc-mods/${mod_id}",
				"modmenu.modrinth": "https://modrinth.com/mod/${mod_id}",
				"Weblate": "https://weblate.nik51.name/projects/${mod_id}"
			},

			"update_checker": true
		}
	}
}